{
  "name": "@llm-shield/data-redaction-agent",
  "version": "1.0.0",
  "description": "Data Redaction Agent for LLM-Shield - Detects and redacts PII, secrets, and credentials",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./patterns": {
      "import": "./dist/patterns.js",
      "types": "./dist/patterns.d.ts"
    },
    "./redactor": {
      "import": "./dist/redactor.js",
      "types": "./dist/redactor.d.ts"
    }
  },
  "files": [
    "dist",
    "AGENT.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "llm-shield",
    "data-redaction",
    "pii-detection",
    "secret-detection",
    "redaction",
    "security",
    "privacy"
  ],
  "author": "LLM-Dev-Ops",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LLM-Dev-Ops/shield.git",
    "directory": "agents/data-redaction"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "@llm-shield/agentics-contracts": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
